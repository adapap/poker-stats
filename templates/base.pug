include mixins.pug

doctype html
html
    head
        block head
            block title
            meta(charset='UTF-8')
            meta(name='viewport', content='width=device-width, initial-scale=1')
            // JQuery
            script(src="{{ url_for('static', filename='scripts/jquery.min.js') }}")
            // Open Sans Font
            link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet')
            block css
                mixin ss(name)
                    link(rel='stylesheet', type='text/css', href='static/css/#{name}')

    body
        block content
        block scripts